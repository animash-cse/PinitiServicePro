                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/arrowBusiness"
                    android:rotation="270"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_down_arrow5" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:background="#e2e2e2"
                />
            <LinearLayout
                android:id="@+id/linear_farmland"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewFarmLand"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/mehendi_artists" />

                <TextView
                    android:id="@+id/textViewFarmLand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="Farm Land"
                    android:textColor="@color/walkthrough_txt" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/arrowFarmLand"
                    android:rotation="270"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_down_arrow5" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:background="#e2e2e2"
                />
            <LinearLayout
                android:id="@+id/linear_machines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageMachines"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/mehendi_artists" />

                <TextView
                    android:id="@+id/textMachines"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="Machines"
                    android:textColor="@color/walkthrough_txt" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/arrowMachines"
                    android:rotation="270"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_down_arrow5" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:background="#e2e2e2"
                />
            <LinearLayout
                android:id="@+id/linear_tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewTools"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/mehendi_artists" />

                <TextView
                    android:id="@+id/textViewTools"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="Tools"
                    android:textColor="@color/walkthrough_txt" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/arrowTools"
                    android:rotation="270"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_down_arrow5" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:background="#e2e2e2"
                />

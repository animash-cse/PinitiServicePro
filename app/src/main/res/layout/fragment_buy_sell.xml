<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical">

            <ExpandableListView
                android:id="@+id/expandblelistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#e2e2e2"
                android:layout_gravity="start"

                android:childDivider="@color/white"
                android:groupIndicator="@null"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                android:dividerHeight="0dp"/>

            <ExpandableListView
                android:id="@+id/expandblelistview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#e2e2e2"
                android:layout_gravity="start"

                android:childDivider="@color/white"
                android:groupIndicator="@null"
                android:background="@color/white"
                android:nestedScrollingEnabled="false"
                android:dividerHeight="0dp"/>

            <LinearLayout
                android:id="@+id/linear_constructionsupply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageConstructionSupply"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/mehendi_artists" />

                <TextView
                    android:id="@+id/textConstructionSupply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="Construction Supply"
                    android:textColor="@color/walkthrough_txt" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/arrowConstructionSupply"
                    android:rotation="270"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_down_arrow5" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:background="#e2e2e2"
                />

            <LinearLayout
                android:id="@+id/linear_propertyland"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewPropertyLand"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/mehendi_artists" />

                <TextView
                    android:id="@+id/textViewPropertyLand"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="Property &amp; Land"
                    android:textColor="@color/walkthrough_txt" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/arrowPropertyLand"
                    android:rotation="270"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_down_arrow5" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="17dp"
                android:background="#e2e2e2"
                />
            <LinearLayout
                android:id="@+id/linear_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="17dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="17dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageHome"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/mehendi_artists" />

                <TextView
                    android:id="@+id/textHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:text="Home"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7f8"
    tools:context="bd.piniti.service_pro.SalonAtHomeWomenTwo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_all_services" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="200dp" />

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            app:ci_drawable="@drawable/white_view_rect"
                            app:ci_drawable_unselected="@drawable/white_view_rect1"
                            app:ci_gravity="right"
                            app:ci_height="5dp"
                            app:ci_width="5dp" />

                    </FrameLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.7dp"
                        android:layout_marginTop="150dp"
                        android:layout_marginRight="11.7dp"
                        android:layout_marginBottom="10.7dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_weight="1"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_regular"
                                    android:text="Leg Waxing"
                                    android:textColor="#5a5b65"
                                    android:textSize="16.7sp" />

                                <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="Rich White Chocolate Wax"-->
                                <!--android:fontFamily="@font/roboto_regular"-->
                                <!--android:layout_marginTop="12dp"-->
                                <!--android:textColor="#8f909e"-->
                                <!--android:textSize="11.7sp"/>-->


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto_medium"
                                        android:text="$10"
                                        android:textColor="#5a5b65"
                                        android:textSize="20sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="@string/_15"
                                        android:textColor="#8f909e"
                                        android:textSize="13.3sp" />


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="7dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="Save 25%"
                                        android:textColor="#f97b73"
                                        android:textSize="13.3sp" />
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_gravity="right"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="4dp"
                                        android:fontFamily="@font/roboto_regular"
                                        android:text="15 min"
                                        android:textColor="#8f909e"
                                        android:textSize="8.3sp" />


                                    <ImageView
                                        android:layout_width="10.3dp"
                                        android:layout_height="10.3dp"
                                        android:src="@drawable/ic_clock" />
                                </LinearLayout>


                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <!--<LinearLayout-->
                                    <!--android:id="@+id/linear_add"-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:orientation="horizontal"-->
                                    <!--android:background="@drawable/blue_light_rect">-->

                                    <!--<TextView-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:text="Add"-->
                                    <!--android:paddingLeft="19dp"-->
                                    <!--android:paddingRight="19dp"-->
                                    <!--android:paddingTop="5dp"-->
                                    <!--android:paddingBottom="5dp"-->
                                    <!--android:fontFamily="@font/roboto_regular"-->
                                    <!--android:textColor="@color/blue"/>-->
                                    <!--</LinearLayout>-->

                                    <LinearLayout
                                        android:id="@+id/linear_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/blue_light_rect"
                                        android:orientation="horizontal"
                                        android:visibility="visible">


                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center"
                                            android:layout_margin="1dp"
                                            android:background="#f2f2f2">


                                            <ImageView
                                                android:id="@+id/minus"
                                                android:layout_width="17dp"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:paddingLeft="4dp"
                                                android:paddingRight="4dp"
                                                android:src="@drawable/ic_minus" />

                                        </FrameLayout>


                                        <TextView
                                            android:id="@+id/number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/roboto_regular"
                                            android:paddingLeft="7dp"
                                            android:paddingTop="4dp"
                                            android:paddingRight="7dp"
                                            android:paddingBottom="4dp"
                                            android:text="1"
                                            android:textColor="@color/blue" />

                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_margin="1dp"
                                            android:background="#f2f2f2">


                                            <ImageView
                                                android:id="@+id/plus"
                                                android:layout_width="17dp"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:paddingLeft="4dp"
                                                android:paddingRight="4dp"
                                                android:src="@drawable/ic_plus" />

                                        </FrameLayout>
                                    </LinearLayout>

                                </FrameLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </FrameLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="About Service"
                            android:textColor="@color/walkthrough_txt"
                            android:textSize="16.7sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Waxing will keep your legs hair free for longer
then shaving up to a month a instead of getting prickly, when hair grows back after waxing, it's a little bit softer"
                            android:textColor="#7f8088"
                            android:textSize="13.3sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Service Hour"
                            android:textColor="@color/walkthrough_txt"
                            android:textSize="16.7sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/cirlce_dot" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Ask your service provider"
                                android:textColor="#7f8088"
                                android:textSize="13.3sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/cirlce_dot" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Estimate 10am - 5pm"
                                android:textColor="#7f8088"
                                android:textSize="13.3sp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Service Duration"
                            android:textColor="@color/walkthrough_txt"
                            android:textSize="16.7sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/cirlce_dot" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Ask your service provider"
                                android:textColor="#7f8088"
                                android:textSize="13.3sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/cirlce_dot" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Estimate time 30 minute"
                                android:textColor="#7f8088"
                                android:textSize="13.3sp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Booking"
                            android:textColor="@color/walkthrough_txt"
                            android:textSize="16.7sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:fontFamily="@font/roboto_regular"
                            android:text="We advice you after online booking, cancellation or reschedule in the system call your service provider for confirmation"
                            android:textColor="#7f8088"
                            android:textSize="13.3sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Payment"
                            android:textColor="@color/walkthrough_txt"
                            android:textSize="16.7sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/cirlce_dot" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="After completing the job you must pay the price agrees between both parties"
                                android:textColor="#7f8088"
                                android:textSize="13.3sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/cirlce_dot" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="@font/roboto_regular"
                                android:text="Currently we are not processing any payment transaction"
                                android:textColor="#7f8088"
                                android:textSize="13.3sp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Notes"
                            android:textColor="@color/walkthrough_txt"
                            android:textSize="16.7sp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:layout_gravity="center"
                                android:src="@drawable/cirlce_dot" />

                            <TextView

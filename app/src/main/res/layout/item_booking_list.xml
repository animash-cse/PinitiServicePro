<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="11.7dp"
        android:layout_marginLeft="11.7dp"
        android:layout_marginBottom="11.7dp"
        android:layout_marginTop="2.7dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salon at home for Women"
                android:textColor="@color/txt_color"
                android:textSize="16.7sp"
                android:layout_margin="16dp"
                android:fontFamily="@font/roboto_regular"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"/>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.7dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="16.7dp"
                    android:layout_height="16.7dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_correct_1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/green"
                    android:text="Booking Accepted"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival time of your professional"
                android:textSize="11.7sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#8f909e"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 am on sun, 30th Dec"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/walkthrough_txt"
                android:layout_marginLeft="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="11.7dp"
                android:background="@color/view_line"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="Cancel"
                    android:textSize="15sp"
                    android:padding="13sp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/view_line"/>

                <TextView
                    android:id="@+id/need_help"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="Need Help?"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:padding="13sp"
                    android:fontFamily="@font/roboto_regular"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>